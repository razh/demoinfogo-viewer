{
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "camelcase": 0,
    "consistent-return": 0,
    "no-cond-assign": 0,
    "no-constant-condition": 0,
    "no-multi-spaces": 0,
    "no-path-concat": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "key-spacing": 0,
    "strict": [0, "never"],
    "quotes": [2, "single", "avoid-escape"]
  }
}
